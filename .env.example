# Environment Configuration
NODE_ENV=development
PORT=3001

# Matrix.org Configuration
MATRIX_HOMESERVER=https://matrix.org
MATRIX_USER_ID=@your-bot-username:matrix.org
MATRIX_ACCESS_TOKEN=your_matrix_access_token_here

# OpenAI Configuration for AI Features
OPENAI_API_KEY=your_openai_api_key_here

# JWT Secret for Authentication
JWT_SECRET=your_super_secret_jwt_key_change_in_production

# Database
DATABASE_PATH=./data/messages.db

# Platform API Keys (Add as you integrate)
# WHATSAPP_API_KEY=your_whatsapp_business_api_key
# SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
# SLACK_SIGNING_SECRET=your_slack_signing_secret
# SIGNAL_API_ENDPOINT=http://localhost:8080

# Features Configuration
ENABLE_AI_SUMMARY=true
ENABLE_AUTO_RESPONSE=true
ENABLE_VOICE_ASSISTANT=true
DAILY_SUMMARY_TIME=18:00

# CORS Settings
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
